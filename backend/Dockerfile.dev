# syntax=docker/dockerfile:1

# Base image with Ruby
ARG RUBY_VERSION=3.4.7
FROM docker.io/library/ruby:$RUBY_VERSION AS base

# Set working directory
WORKDIR /rails

RUN apt-get update -qq && \
    apt-get install --no-install-recommends -y \
    curl \
    default-mysql-client \
    libjemalloc2 \
    libvips \
    default-libmysqlclient-dev && \
    rm -rf /var/lib/apt/lists /var/cache/apt/archives

# Environment variables for development
ENV RAILS_ENV="development" \
    BUNDLE_PATH="/usr/local/bundle" \
    BUNDLE_WITHOUT=""

# Install application dependencies
COPY Gemfile Gemfile.lock ./
RUN bundle install

# Add rails bin directory to path variable
ENV PATH="/rails/bin:${PATH}"

# Add the application source code
COPY . .

# Add a non-root user for development
USER root

# Ports for Rails (3000) and debugging tools
EXPOSE 3000

# Entrypoint and default command
CMD ["bin/rails", "server", "-b", "0.0.0.0"]